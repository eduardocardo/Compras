<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/alto_scroll_horizontal_productos"
    android:paddingRight="5dp"
    android:paddingLeft="5dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/alto_scroll_horizontal_productos"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="100dp">

            <com.proconsi.leondecompras.views.ImageView
                android:id="@+id/imagen_articulo"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:src="@drawable/placeholder"
                android:scaleType="centerCrop"
                android:transitionName="@string/anim_imagen_producto"/>

            <com.proconsi.leondecompras.views.TextViewTypeface
                android:id="@+id/texto_precio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 â‚¬"
                android:textSize="15dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/fondo_redondo_naranja"
                android:layout_margin="3dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/blanco_perfecto"/>
        </RelativeLayout>

        <com.proconsi.leondecompras.views.TextViewTypeface
            android:id="@+id/text_nombre_articulo"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Nombre producto"
            android:textSize="13dp"
            android:textColor="@color/blanco_perfecto"
            android:background="@color/color_primary"
            android:maxLines="2"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="bottom"/>
    </android.support.v7.widget.CardView>
</LinearLayout>
